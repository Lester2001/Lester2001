import java.io.* ;
import java.util.Scanner;

public class Pet extends User {
	
	private int P_id=2022;
	private String P_name= "Kush";
	
	public void Choice () {
		System.out.println("Enter the number of your Choice:1-PayBill");
		 Scanner sc = new Scanner (System.in);
			int Choice = sc.nextInt();
			
			switch (Choice) {
			case 1: PayBill();
				break;
			case 2: main(null);
			}
		}
	
			
	private void PayBill() {
	System.out.println("Thanks for Paying,have a great day!");
		
	}

	public int getP_id() {
		return P_id;
	
	}
	public void setP_id(int P_id) {
		this.P_id = P_id;
	}
	public String getP_name() {
		return P_name;
		
	}
	public void setP_name(String P_name) {
		this.P_name = P_name;
		
	}
}
